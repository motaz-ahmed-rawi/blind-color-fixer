{
    "manifest_version": 3,
    "name": "Colorblind Fixer",
    "version": "1.0",
    "description": "Adjusts colors for colorblind users, including videos.",
    "permissions": ["activeTab", "scripting", "tabs", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
}